<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= project.title %> | Climate Solutions</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body data-theme="dim">
  <%- include('partials/navbar', { page: '' }) %>

  <main class="container mx-auto p-10">
    <section class="hero bg-base-200 rounded-xl p-10 text-center mb-10">
    <h1 class="text-5xl font-bold mb-6 mt-2"><%= project.title %></h1>

      <p class="mt-2">Below you will find detailed information about this project.</p>
    </section>

    <img src="<%= project.feature_img_url %>" alt="<%= project.title %>"
         class="rounded-2xl shadow-xl w-full h-96 object-cover mb-8" />

    <div class="prose mx-auto">
      <p><%= project.intro_short %></p>
      <h3 class="mt-6 font-bold">Impact</h3>
      <p><%= project.impact %></p>

      <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-outline mt-6">
        Learn More
      </a>

      <p id="quote" class="italic mt-6 text-center"></p>

      <a href="#" onclick="history.back(); return false;" class="btn btn-secondary mt-6">Back</a>
    </div>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      try {
        const res = await fetch("https://dummyjson.com/quotes/random");
        const q = await res.json();
        document.getElementById("quote").innerText = `"${q.quote}" â€” ${q.author}`;
      } catch (e) {
        document.getElementById("quote").innerText = "Couldn't load quote.";
      }
    });
  </script>
</body>
</html>
